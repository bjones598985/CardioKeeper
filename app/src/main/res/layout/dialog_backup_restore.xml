<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="32dp"
    android:background="@drawable/white_rectangle_background"
    android:animateLayoutChanges="true">


    <Button
        android:id="@+id/backup_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:theme="@style/DialogButtons"
        android:text="Back Up" />

    <Button
        android:id="@+id/backup_same_location"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:theme="@style/DialogButtons.Mini"
        android:visibility="gone"/>

    <Button
        android:id="@+id/backup_new_location"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:theme="@style/DialogButtons.Mini"
        android:visibility="gone"
        android:text="Backup to New Location"/>

    <Button
        android:id="@+id/restore_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        android:text="Restore"
        android:theme="@style/DialogButtons.Restore" />

    <Button
        android:id="@+id/restore_last_location"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:theme="@style/DialogButtons.Restore.Mini"
        android:visibility="gone"/>

    <Button
        android:id="@+id/restore_other_location"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:theme="@style/DialogButtons.Restore.Mini"
        android:visibility="gone"
        android:text="Pick to Restore from..."/>

</LinearLayout>