<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_distance_type"
        android:entryValues="@array/pref_distance_values"
        android:key="@string/pref_distance"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_distance_title" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_sync"
        android:summary="@string/pref_sync_summary"
        android:title="@string/pref_sync_title" />

    <EditTextPreference
        android:defaultValue="@string/never"
        android:key="@string/db_backup_date_time"
        android:title="@string/sync_date_pref_text"
        android:summary="@null"
        android:dialogTitle="@null"
        android:enabled="false" />

</PreferenceScreen>
